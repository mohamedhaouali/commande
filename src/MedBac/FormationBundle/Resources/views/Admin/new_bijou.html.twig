{% extends "MedBacFormationBundle::layout_admin.html.twig" %}
{%block content%}
<div  style=" height:650px" class="cont_center">
{% block notice %}
	<div id="templatemo_main">
            <ul id="social_box">
             {% for flashMessage in app.session.flashbag.get('message') %}

<div class="success"  >  
    <p style="color:red"> {{ flashMessage }}</p>

</div> 
        
{% endfor %}
            </ul>
         {%endblock%}
                <center> <h2>Creation d'un Bijou</h2> </center><br><br>
   
<form action="{{ path('ajout_bijou') }}" method="post" {{ form_enctype(form) }} class="well-sm">
  {{form_widget(form._token)}}
  
   <a> {{ form_errors(form) }}</a>
  
               <div style="text-align: left"class="form-group">
                {{ form_label(form.titre,"Titre du Bijou :") }}
                {{ form_errors(form.titre) }}
                {{ form_widget(form.titre, { 'attr': {'placeholder': "donner un titre"} }) }}
                </div>
              <div style="text-align: left"class="form-group">
                {{ form_errors(form.description) }}
                 {{ form_label(form.description,"Description du Bijou :") }}
                {{ form_widget(form.description, { 'attr': {'placeholder': "donner une description"} }) }}
                 </div>
            <div style="text-align: left"class="form-group">
                {{ form_errors(form.prix) }}
                 {{ form_label(form.prix,"Prix du Bijou :") }}
                {{ form_widget(form.prix, { 'attr': {'placeholder': "donner un prix"} }) }}
                 </div>
   <div style="text-align: left"class="form-group">
                {{ form_errors(form.quantite) }}
                 {{ form_label(form.quantite,"Quantité en Stock :") }}
                {{ form_widget(form.quantite, { 'attr': {'placeholder': "donner une quantité"} }) }}
                 </div>
       <div style="text-align: left"class="form-group">
                 {{ form_label(form.listeDesGenres,"Genres du Bijou :") }} 
                 {{ form_errors(form.listeDesGenres) }}
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;{{ form_widget(form.listeDesGenres)}} 
                 </div>
       <div style="text-align: left"class="form-group">
                {{ form_label(form.file,"Image du Bijou :") }}
                {{ form_errors(form.file) }}
                {{ form_widget(form.file, { 'attr': {'placeholder': "donner un prix"} }) }}
                 </div>
              
       <div>
       <center> <input type="submit" class="btn btn-primary btn-success pull-right"/>
       </center></div> 
     </form>


            </div>
{%endblock%}
